---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import {SignIn, SignOut} from 'auth-astro/components';
import {getSession} from "auth-astro/server";
import {dictionary} from "../../data/dictionary";
import { services } from '../../data/services';
const session = await getSession(Astro.request);

const language = Astro.request.url.split('/')[3] || 'es'; // Obtener el idioma de la URL
console.log(language); // Aquí puedes usar el idioma obtenido de la URL



const isLoggedIn = !!session;
---
<Layout
  title="Ivan Rodriguez Rojas FrontEnd Developer"
  defaultLanguage={language}
>

<section class="grid grid-cols-1 items-center justify-center w-full pt-6 md:pt-10 lg:pt-20">

  

  
    {
      isLoggedIn ?(
      <nav class="flex flex-col md:flex-row lg:flex-row items-center justify-between">
        <div class="flex space-x-3 items-center">
          <div>
            <img src={session.user?.image} alt={session.user?.name} class="w-16 h-16 rounded-full" />
          </div>
          <div class="grid grid-cols-1">
            <span class="font-bold">Bienvenido: </span>
            <span class="text-2xl" > {session.user?.name} </span>
            <small > {session.user?.email} </small>
          </div>

          
        
          
        </div>
        <SignOut><a class="inline-flex items-center justify-center gap-3 px-5 py-3 text-base font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">Cerrar sesión</a></SignOut>
      </nav>
      
      ): (
      <nav class="flex flex-col items-center space-x-5">
      <h1 class="mb-4 mx-16 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white" transition:name="labelAboutx">{dictionary[language as keyof typeof dictionary]?.servicesHeader || "Default Header"}</h1>
      <p class="mb-6 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400">Here at Flowbite we focus on markets where technology, innovation, and capital can unlock long-term value and drive economic growth.</p>
      <a  class="inline-flex items-center justify-center gap-3 px-5 py-3 text-base font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">
        
        <SignIn provider={"google"}>Iniciar con Google</SignIn>
        <img src="data:image/svg+xml;base64," alt="Iniciar con Google" class="w-6 h-6 rounded-full" />
        
      </a>
      </nav>
      
      )
    }
    
    
  



