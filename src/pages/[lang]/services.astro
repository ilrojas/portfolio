    <nav class="flex flex-col lg:flex lg:flex-row items-center space-x-5">
        {
          isLoggedIn ?(
            <small>Bienvenido {session.user?.email} </small><img src={session.user?.image} alt={session.user?.name} class="w-8 h-8 rounded-full" />
            <SignOut>Cerrar sesión</SignOut>
          ): (
          <SignIn provider={"google"}>Iniciar con Google </SignIn>
          <img src="data:image/svg+xml;base64," alt="Iniciar con Google" class="w-6 h-6 rounded-full" />
          
          )
        }
        
        
      </nav> -->
</section>
{
    isLoggedIn ?(
      
    <section class="flex flex-col items-center space-x-5">
        <section class="bg-white dark:bg-gray-900">
          <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
              <div class="max-w-screen-md mb-8 lg:mb-16">
                  <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Designed for business teams like yours</h2>
                  <p class="text-gray-500 sm:text-xl dark:text-gray-400">Here at Flowbite we focus on markets where technology, innovation, and capital can unlock long-term value and drive economic growth.</p>
              </div>
              <div class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0">
                  {services.map((item) => (
                      <div class="flex flex-col gap-3" id=`serv${item.id}-${item.name}`>
                        <div class="flex justify-center items-center mb-2 w-10 h-10 rounded-full bg-primary-100 lg:h-12 lg:w-12 dark:bg-primary-900">
                          <span set:html={item.icon} class="w-5 h-5 text-primary-600 lg:w-6 lg:h-6 dark:text-primary-300"></span>
                        </div>
                        <h3 class="text-xl font-bold dark:text-white">{item.name}</h3>
                        <div class="flex gap-2 text-xs">
                        {
                          item.type.map((type) => (
                            type==="frontend" ? (
                            <span class="bg-indigo-100 text-indigo-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded-full dark:bg-indigo-900 dark:text-indigo-300">{type}</span>
                            ) : (
                            <span class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded-full dark:bg-green-900 dark:text-green-300">{type}</span>
                            )
                            
                          ))
                        }
                        </div>
                        <p class="text-gray-500 dark:text-gray-400">{item.description}</p>
                        <a href="#" class="w-fit text-white bg-cyan-600 hover:bg-cyan-700 focus:ring-4 focus:ring-cyan-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:text-white  dark:focus:ring-cyan-900">Obtener cotización</a>
                      </div>
                  ))}
                  
                  
              </div>
          </div>
        </section>
      </section>
    ): (
    
    null
    )
  }
  
</Layout>
