---
import { dictionary } from "../data/dictionary";

import { iconCoder } from "../data/iconCoder";
const { defaultLanguage } = Astro.props;
---

<div
  class="grid grid-cols-6 justify-center items-center bottom-0 align-bottom w-full py-3 px-6 pb-1 bg-[#262f3d]"
>
  <div class="col-span-1">
    <div class="col-span-12 sm:col-span-4">
      <div
        class="p-4 relative bg-gray-900 border border-gray-900 shadow-lg rounded-2xl"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-14 w-14 absolute bottom-4 right-3 text-blue-500"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"
          ></path>
        </svg>
        <div class="flex justify-between items-center">
          <i class="fab fa-behance text-xl text-gray-400"></i>
        </div>
        <div class="text-2xl text-gray-100 font-medium leading-8 mt-5">99</div>
        <div class="text-sm text-gray-500">Total visits</div>
      </div>
    </div>
  </div>
  <div class="col-span-4 flex flex-col justify-center items-center">
    <ul class="flex flex-row justify-center gap-8">
      <a
        href="#"
        target="_blank"
        rel="noopener noreferrer"
