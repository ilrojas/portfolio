---
import Badge from "./Badge.astro"
import { icons } from "../data/icons"
const {project,img, description,subtitle,tech} = Astro.props
---

<section class="group project-card flex flex-col gap-4 bg-white dark:bg-gray-800 shadow-lg rounded-lg p-4  transition-all duration-300 px-1 py-4 relative overflow-hidden">
  <!-- Div del fondo animado, fuera del contenido -->
  <div class="absolute z-0 h-[200%] w-[200%] left-[-50%] top-[-50%] bg-[conic-gradient(rgba(244,114,182,0.4)_0deg,rgba(192,132,252,0.4)_0deg,transparent_50deg)] animate-spinSlow">
  </div>

  <!-- Capa blanca que cubre el centro para que solo se vea el borde -->
  <div class="absolute z-10 inset-0 m-[2px] bg-white dark:bg-gray-800 rounded-lg"></div>

  <!-- Contenido de la tarjeta -->
  <div class="relative z-20 h-[70vh] w-[85%] p-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-5">
    <div class="project-card__image rounded-lg w-44 md:w-44 lg:w-auto h-44 md:h-44 lg:h-auto flex justify-center items-center overflow-hidden transition-transform duration-300">
      <img class="object-cover rounded-lg w-40 lg:w-full h-40 lg:h-full transition-transform duration-300 ease-in-out group-hover:scale-125" src={img} alt={project} loading="lazy"/>
    </div>
    <div class="flex flex-col gap-4 align-middle items-start">
      <div class="project-card__content ">
        <h2 class="text-3xl font-semibold text-gray-800 dark:text-white flex justify-end">{project}</h2>
           
      </div>
      <div class="project-card__content ">
        
        <h3 class="text-xl text-gray-600 dark:text-gray-400 flex justify-start">{subtitle}</h3>    
      </div>
      <div class="bg-gray-900 px-3 py-1 rounded-md">
       <!--  <p class="visible-description text-[13px] text-gray-600 dark:text-gray-400 lg:line-clamp-3 w-full">{description}</p> -->
        <p class=" lg:block hidden-description text-[16px] text-gray-600 dark:text-gray-300 transition-transform duration-300 rounded-lg w-full shadow-md">
          {description}
        </p>
      </div>
    
      <footer class="flex flex-wrap gap-2 justify-start items-center text-xs mt-3">
        {tech.map((item: string) => {
          return (<span class="rounded-xl dark:bg-gray-600 bg-transparent px-2 py-[3px] dark:border-0 border-2">{item}</span>)
          /* return <Badge badgeText={item} badgeColor="blue-400" /> */
        })}
      </footer>
    </div>
    
  </div>
</section>



