<h1 class="text-2xl font-semibold mb-6">Gráfico de Habilidades Técnicas</h1>

<svg id="grafico" width="800" height="1000">
  <!-- Aquí se dibujarán los gráficos -->
</svg>

<script>
  import { skills } from "../data/skills";
  const tech = skills.technical;

  const svg = document.getElementById("grafico") as SVGAElement;
  // Generar rectángulos dinámicamente
  tech.forEach((item, index) => {
    const rect = document.createElementNS("http://www.w3.org/2000/svg", "rect");
    rect.setAttribute("x", (50 * index + 10).toString()); // Posición X
    rect.setAttribute("y", (50).toString()); // Posición Y
    rect.setAttribute("width", "40"); // Ancho basado en el rating
    rect.setAttribute("height", item.rating.toString()); // Altura del rectángulo
     // Color de relleno
   
    /* rect.setAttribute('style', 'fill: lightblue; stroke: black; transition: fill 0.3s;');  // Borde del rectángulo
