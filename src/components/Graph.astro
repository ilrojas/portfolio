    rect.addEventListener('mouseout', () => rect.setAttribute('style', 'fill: lightblue; stroke: black; transition: fill 0.3s;')); */
    rect.classList.add(
      "rounded-3xl",
      "dark:fill-yellow-600/80",
      "fill-[lightblue]",
      "transition-all",
      "duration-300",
      "hover:fill-blue-700"
    );

    // Añadir el rectángulo al SVG
    svg.appendChild(rect);

    // Añadir texto sobre el rectángulo
    const text = document.createElementNS("http://www.w3.org/2000/svg", "text");
    text.setAttribute("x", (50 * index + 10).toString());
    text.setAttribute("y", (50).toString()); 
    text.setAttribute("text-anchor", "middle");
    text.setAttribute("fill", "black");
    text.setAttribute("transform", "rotate(45)");
    text.textContent = `${item.name} (${item.rating}%)`;

    // Añadir el texto al SVG
    svg.appendChild(text);
  });
