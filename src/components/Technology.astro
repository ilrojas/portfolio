---
import { dictionary } from "../data/dictionary";
import { icons } from "../data/icons";

const {defaultLanguage}= Astro.props
---
<div class="dark:text-white text-gray-700 animatedScroll grid grid-cols-1 items-center justify-center lg:w-3/4 bg-[#bdcde7] dark:bg-gray-900 mt-6 lg:mt-0 py-2 rounded-lg  space-y-10">
  <section class="uppercase font-interTight text-sm  lg:text-2xl text-center w-2/3 lg:w-2/4 mx-auto tracking-normal ">
    <h3>{dictionary[defaultLanguage]?.sloganTech}</h3>
  </section>
  <div
  id="skills"
        class=" flex lg:flex lg:flex-row gap-1 pt-2 justify-center items-center -space-x-1 text-gray-700 dark:text-gray-400 opacity-75   overflow-hidden"
      >
      <div class="marquee-content w-fit flex flex-nowrap justify-center items-center gap-2 animate-scrollHorizontal lg:animate-none overflow-hidden whitespace-nowrap">
        {
          icons.map((icon, index) => {
            const classBorder = index % 2 === 0 ? 'lg:border-b-2 ' : 'lg:border-t-2 ';
            
                      return (
              <div 
              class={` ${classBorder} lg:border-yellow-200 lg:border-opacity-25 p-4  lg:border-dotted lg:rounded-full`} 
              >
                
               <small class="hidden text-xs lg:flex justify-center drop-shadow-[2px_2px_4px_rgba(255,250,200,1)]"> {index % 2 === 0 ? icon.icon : ""}</small>
                <div class="animate-technologyIcons"              
                style={`animation-delay: ${index * 600}ms;`}
                /* style={`animation-delay: ${icon.delay};`} */
                >
                <span
                  class="icon flex align-middle justify-center"
                  /* class="icon opacity-15 drop-shadow-[0_2px_10px_rgba(0,191,255,1)]" */
                  
                  set:html={icon.svgcolor}
                >
                  
                  {" "}
                  
                </span>
              </div>
                <small class="text-xs hidden lg:flex justify-center  drop-shadow-[2px_2px_4px_rgba(255,250,200,1)]"> {index % 2 != 0 ? icon.icon : ""}</small>
                <small class="lg:hidden text-xs flex justify-center  drop-shadow-[2px_2px_4px_rgba(255,250,200,1)]"> {icon.icon}</small>
                {/* <span class="text-xs mt-2">{icon.icon}</span> */}
              </div>
            );
          })
        }
      </div>
  </div>
      <div class="relative  group  w-72 h-7 left-1/2 -translate-x-1/2">
